<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title, :label => "标题" %>
  </div>


  <div class="group">
    <%= f.input :description, as: :ckeditor, :label => "店铺详情" %>

  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>


  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file, :label => "封面" %>
  </div>

   <%= f.submit "Submit", data: { disable_with: "Submitting..."}  %>
   <% end %>
